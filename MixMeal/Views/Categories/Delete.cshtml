@model MixMeal.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row justify-content-center">
    <div class="card card-default col-6 m-5">
        <div class="card-header">
            <h2 class="mb-5">Are you sure you want to delete this Category? </h2>
        </div>
        <div class="row">
            <div class="col-10">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoryname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoryname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categorydescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categorydescription)
                    </dd>
                    
                </dl>
            </div>
            <div class="col-3">
                <div class="card-img mx-auto">
                    <img class=" m-3" src="~/image/CategoryImage/@Model.Imagepath" alt="user image" width="150" height="150">
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-end">
                <div class="d-flex  col-lg-2">
                    <form asp-action="Delete">
                    <input type="submit" value="Delete" class="mb-1 btn  btn-danger"/>
                    </form>
                </div>
                <div class="d-flex  col-lg-2">
                    <a asp-action="Index" class="mb-1 btn  btn-primary">Back</a>
                </div>
            </div>

        </div>
    </div>
</div>



