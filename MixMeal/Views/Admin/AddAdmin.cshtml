@model RegisterViewModel
@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row justify-content-center">
    <div class="card card-default col-6 m-5">
        <div class="card-header">
            <h2 class="mb-5">Add Admin</h2>

        </div>

        <div class="card-body">

            <form asp-action="AddAdmin">
               

                <div class="form-group row mb-6">
                    <label asp-for="Firstname" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Firstname" class="form-control" id="occupation">
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-6">
                    <label asp-for="Lastname" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Lastname" class="form-control" id="com-name">
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Username" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Username" class="form-control" id="com-name">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Email" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Email" class="form-control" id="com-name">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Upassword" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Upassword" class="form-control" id="com-name">
                        <span asp-validation-for="Upassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Phone" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Phone" class="form-control" id="com-name">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Genderid" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                    <select asp-for="Genderid" class="form-control input-lg" asp-items="ViewBag.Genderid">
                        <option value="default" selected>Gender</option>


                    </select>
                    <span asp-validation-for="Genderid" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-6">
                    <label asp-for="Bithdate" class="col-sm-4 col-lg-2 col-form-label"></label>
                    <div class="col-sm-8 col-lg-10">
                        <input asp-for="Bithdate" class="form-control" id="com-name">
                        <span asp-validation-for="Bithdate" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="d-flex justify-content-end">
                        <input type="submit" value="Create" class="mb-1 btn btn-pill btn-primary" />
                    </div>
                
            </form>
        </div>
    </div>
</div>
