@model MixMeal.Models.Contactu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="card card-default col-6 m-5">
        <div class="card-header">
            <h2 class="mb-5">Are you sure you want to delete this email?</h2>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Custname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Custname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Custemail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Custemail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contactdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contactdate)
            </dd>
        </dl>
        <div class="card-body">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Contactusid" />
                <div class="row justify-content-end">
                    <div class="d-flex  col-lg-2">
                        <input type="submit" value="Delete" class="mb-1 btn  btn-danger" />
                    </div>
                    <div class="d-flex  col-lg-2">
                        <a asp-action="ContactInbox" class="mb-1 btn  btn-primary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

