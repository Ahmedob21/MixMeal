@model IEnumerable<User>

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    
}


<!--::chefs_part start::-->
<section class="chefs_part blog_item_section section_padding">
    <div class="container">
        <div class="row">
            <div class="col-xl-5">
                <div class="section_tittle">
                    <p>Team Member</p>
                    <h2>Our Experience Chefs</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var chefs in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="single_blog_item">
                        <div class="single_blog_img">
                            <img src="~/Image/PersonalImage/@chefs.Imagepath" alt="" height="330" width="330">
                        </div>
                        <div class="single_blog_text text-center">
                            <h3>@chefs.Firstname @chefs.Lastname</h3>
                            <p>@chefs.Role.Rolename</p>
                            <a asp-action="RecipesByChef" asp-route-id="@chefs.Userid" class="btn_3">Recipes <img src="~/Home/img/icon/left_2.svg" alt=""></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--::chefs_part end::-->





