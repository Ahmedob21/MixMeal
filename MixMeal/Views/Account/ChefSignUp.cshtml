@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel




<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/Account/images/logo-dark.svg" alt="logo">
                        </div>
                        <h4>New here?</h4>
                        <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                        <form class="pt-3" asp-action="ChefSignUp" method="POST">

                            <div class="form-group">
                                <input asp-for="Firstname" class="form-control form-control-lg" placeholder="First Name">
                            </div>

                            <div class="form-group">
                                <input asp-for="Lastname" class="form-control form-control-lg" placeholder="Last Name">
                            </div>

                            <div class="form-group">
                                <input asp-for="Username" class="form-control form-control-lg" placeholder="Username">
                            </div>

                            <div class="form-group">
                                <input asp-for="Phone" class="form-control form-control-lg" placeholder="Phone number">
                            </div>

                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" required>
                            </div>

                            <div class="form-group">
                                <input asp-for="Upassword" class="form-control form-control-lg" placeholder="Password" required>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mt-3">
                                <input type="submit" name="signup" id="signup" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Register" />
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="Login" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
