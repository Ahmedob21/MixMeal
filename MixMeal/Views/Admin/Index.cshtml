                            <canvas id="mixedChart" class="m-1" width="200" height="95"></canvas>
                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    var ctx = document.getElementById('mixedChart').getContext('2d');

                                    var recipeNames = @Html.Raw(Json.Serialize(ViewBag.RecipeNames));
                                    var purchaseCounts = @Html.Raw(Json.Serialize(ViewBag.PurchaseCounts));
                                    var lineData = @Html.Raw(Json.Serialize(ViewBag.LineData));

                                    const mixedChart = new Chart(ctx, {
                                        data: {
                                            datasets: [{
                                                type: 'bar',
                                                label: 'Bar Dataset',
                                                data: purchaseCounts,
                                                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                                borderColor: 'rgba(75, 192, 192, 1)',
                                                borderWidth: 1
                                            }, {
                                                type: 'line',
                                                label: 'Line Dataset',
                                                data: lineData,
                                                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                                                borderColor: 'rgba(153, 102, 255, 1)',
                                                borderWidth: 1
                                            }],
                                            labels: recipeNames
                                        },
                                        options: {
                                            scales: {
                                                y: {
                                                    beginAtZero: true
                                                }
                                            }
                                        }
                                    });
                                });
                            </script>
                   
                </div>
