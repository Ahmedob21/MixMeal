@model MixMeal.Models.Testimonial

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header">

    <a asp-controller="Admin" asp-action="Testimonials" class="mb-1 btn btn-primary">Back</a>

</div>


  


<div class="owl-carousel owl-theme carousel-testimonial justify-content-center">
    <div class="card border-0 text-center">
        <img src="~/Image/personalImage/@Model.Cust.Imagepath" class="rounded-circle mb-3 mx-auto" alt="User Image" height="120" width="120">
        <div class="card-body">
            <p class="mb-4">
                @Model.Ucomment
            </p>
            <span class="h4 d-block">@Model.Cust.Firstname @Model.Cust.Lastname</span>
            <span>@Model.Cust.Role.Rolename</span>
        </div>
    </div>
</div>
