@model LoginViewModel


@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}


<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class=" w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" asp-controller="Home" asp-action="Index">
                                <img src="~/Image/HomePageImage/logo.svg" alt="Mono" width="90" height="90">
                                <span class="brand-name text-dark"></span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">

                        <h4 class="text-dark mb-6 text-center">Login</h4>

                        <form asp-action="Login">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Email" class="form-control input-lg"  placeholder="email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-12 ">
                                    <input asp-for="Upassword" class="form-control input-lg" id="password" placeholder="Password">
                                    <span asp-validation-for="Upassword" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-12">

                                    <button type="submit" class="btn btn-primary btn-pill mb-4">Sign In</button>

                                    <p>
                                        Don't have an account yet ?
                                        <a class="text-blue" asp-action="SignUp">Sign Up</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


