@model AddTestimonial

@{
    
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="section-top-border justify-content-center">
	<div class="row">
        <div class="col-lg-8 col-md-8 ml-5">
			<h3 class="mb-30">Add Testimonial</h3>
        </div>
        <div class="col-lg-8 col-md-8 ml-5">

            <form asp-controller="Testimonials" asp-action="Create" method="post">
                <div class="mt-10">
                    <label asp-for="Ucomment" class="control-label"></label>
                    <textarea asp-for="Ucomment" class="single-textarea" placeholder="Message" required></textarea>
                </div>


                <div class="mt-10 justify-content-end">
                    
                    <input type="submit" class="genric-btn success" value="Post" />
                   
                </div>
			</form>
        </div>

	</div>
</div>