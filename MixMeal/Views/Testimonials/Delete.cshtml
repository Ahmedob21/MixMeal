@model MixMeal.Models.Testimonial

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="owl-carousel owl-theme carousel-testimonial justify-content-center">
    <div class="card-header justify-content-lg-start justify-content-md-start">
        <div class="row justify-content-between">
            <div class="d-flex  col-lg-8">
                <h3>Are you sure you want to delete this testimonial?</h3>
            </div>
            <div class="d-flex  col-lg-4">
                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="mb-1 btn  btn-danger" />
                </form>
                <a asp-controller="Admin" asp-action="Testimonials" class="mb-1 btn  btn-primary ml-4">Back</a>
            </div>
        </div>
    </div>
    <div class="card border-0 text-center">
      
        <img src="~/Image/personalImage/@Model.Cust.Imagepath" class="rounded-circle mb-3 mx-auto" alt="User Image" height="120" width="120">
        <div class="card-body">
            <p class="mb-4">
                @Model.Ucomment
            </p>
            <span class="h4 d-block">@Model.Cust.Firstname @Model.Cust.Lastname</span>
            @* <span>@Model.Cust.Role.Rolename</span> *@
        </div>
      
        
        
    </div>
</div>
